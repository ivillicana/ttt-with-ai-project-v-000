#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic-Tac-Toe!"

case Game.start
when 0

when 1

when 2
  first_player = Players::Human.new("X")
  second_player = Players::Human.new("O")
  board = Board.new
  game = Game.new(first_player, second_player, board)
  board.display
  game.play
  game.play_again?
end
